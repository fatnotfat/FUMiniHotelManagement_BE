@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="login-page">
        <div class="form">
            <div class="login-form">
                <form method="post">
                    <input placeholder="Email" asp-for="Email">
                    <input type="password" placeholder="Password" asp-for="Password">
                    @Html.ValidationMessageFor(m => m.ErrorMessage, "", new { @class = "text-danger" })
                    <button>Login</button>
                </form>
            </div>
        </div>
    </div>
</div>